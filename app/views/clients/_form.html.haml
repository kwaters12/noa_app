= simple_form_for @client do |f|
  .col-m6.col-md-offset-3
    .text-left
      %hr
      %h3 Guest Applicant
      %hr
      .col-md-6.form-group 
        = f.input :first_name, input_html: { class: 'form-control' }
      .col-md-6.form-group   
        = f.input :email, required: true, input_html: { class: 'form-control' }
      .col-md-6.form-group   
        = f.input :last_name, required: true, input_html: { class: 'form-control' }
      .col-md-6.form-group   
        = f.input :phone_num, input_html: { class: 'form-control' }
      .col-md-6.form-group 
        = f.input :sin, input_html: { class: 'form-control' }
      .col-md-6.form-group
        = f.input :dob, input_html: { class: 'datepicker form-control' }
      = f.submit "Apply for Your NOA"
      %hr
      .col-md-12
        %p Are you a mortgage broker? Please provide your email, so we may share the documents with you upon completion.
        = f.input :broker_id, class: 'form-control'      
        %p Can't find your account?
        = link_to "Create One Now", new_user_registration_path(@broker), class: 'btn btn-default'
      